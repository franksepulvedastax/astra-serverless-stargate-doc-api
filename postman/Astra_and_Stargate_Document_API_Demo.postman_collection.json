						}
					]
				},
				"url": {
					"raw": "https://{{db}}-{{region}}.apps.astra.datastax.com/api/rest/v2/namespaces/{{keyspace}}/collections/{{collection}}?where={\"address.state\":{\"$eq\":\"Texas\"}}&page-size=10",
					"protocol": "https",
					"host": [
						"{{db}}-{{region}}",
						"apps",
						"astra",
						"datastax",
						"com"
					],
					"path": [
						"api",
						"rest",
						"v2",
						"namespaces",
						"{{keyspace}}",
						"collections",
						"{{collection}}"
					],
					"query": [
						{
							"key": "where",
							"value": "{\"address.state\":{\"$eq\":\"Texas\"}}"
						},
						{
							"key": "page-size",
							"value": "10"
						}
					]
				}
			},
